<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.LoginUI"
             BackgroundColor="#112B47">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="logo_plasutil" WidthRequest="180" HeightRequest="180"></Image>
            <Entry Placeholder= "Nome" TextColor="White" PlaceholderColor = "Gray"></Entry>
            <Entry Placeholder= "Senha" IsPassword="True" PlaceholderColor = "Gray"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="ForestGreen"
                BorderWidth="1.5"
                CornerRadius="50"
                >
                
            </Button>
            
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>